# WordPress Import Configuration
# Copy this file to .env and update with your local WordPress details

# Local WordPress Installation
WP_BASE_URL=http://localhost:8080
# Or if using MAMP/XAMPP: http://localhost/memorycare
# Or if using Local by Flywheel: https://memorycare.local

# WordPress Admin Credentials
WP_USERNAME=admin
WP_APPLICATION_PASSWORD=your-app-password-here

# Import Settings
WP_POST_STATUS=draft
WP_POST_TYPE=page
WP_DEFAULT_AUTHOR=1

# Optional: Test with just one page first
TEST_MODE=true
TEST_PAGE_SLUG=about-us
