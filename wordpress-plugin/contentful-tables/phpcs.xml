<?xml version="1.0"?>
<ruleset name="ContentfulTables">
    <description>WordPress Coding Standards for Contentful Tables plugin.</description>

    <file>.</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <arg name="extensions" value="php"/>
    <arg name="colors"/>
    <arg value="sp"/>

    <config name="minimum_wp_version" value="6.5"/>
    <config name="testVersion" value="8.2-"/>

    <rule ref="WordPress-Extra">
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="ctfl_tables"/>
                <element value="SilverAssist\ContentfulTables"/>
            </property>
        </properties>
    </rule>

    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="contentful-tables"/>
            </property>
        </properties>
    </rule>
</ruleset>
