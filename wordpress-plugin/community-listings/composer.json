{
    "name": "silverassist/community-listings",
    "description": "Registers a hierarchical Community custom post type for state and city memory care listings with WPGraphQL support.",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^2.1",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "wp-coding-standards/wpcs": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "SilverAssist\\CommunityListings\\": "includes/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse --memory-limit=512M"
    }
}
